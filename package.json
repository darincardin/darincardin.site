{
  "private": true,
  "name": "website",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "save": "git add . && git commit -m 'test' && git push",
    "go": "npm run build && npm run serve",
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "start": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
  
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",

    "loadimage": "darincardin/jquery.loadimage",
    "counter": "darincardin/counter",
    "tokenizer": "darincardin/tokenizer",
    "form": "darincardin/form",
    "stepbar": "darincardin/stepbar",              
    "preact-cli": "^3.0.0",
    "sass": "^1.54.8",
    "sass-loader": "^10.2.0",  
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "bootstrap": "5.2",
    "jquery": "^3.4.1",
    "jquery.touch": "1.0.0",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-bootstrap": "^2.5.0",
    "react-router-dom": "^5.1.2",
    "react-syntax-highlighter": "^15.5.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
